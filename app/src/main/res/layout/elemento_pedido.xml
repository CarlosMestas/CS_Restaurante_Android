<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/platoID"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"

    card_view:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#806E752C"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <LinearLayout
                android:id="@+id/contendCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/platoTituloPD"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Americano triple de casa"
                        android:fontFamily="cursive"
                        android:textSize="40dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/removePD"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/remove" />
                        <ImageView
                            android:id="@+id/addPD"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/add" />

                        <TextView
                            android:id="@+id/cantidadPD"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            card_view:text="5" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:gravity="fill_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/platoPrecioPD"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Subtotal:"
                        android:textAlignment="textEnd"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>