<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/backgroud_degradado1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfiguration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Configuración"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonChef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_style1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Cocinero"
            android:textColor="@color/white" />
    </LinearLayout>

    <ImageView
        android:layout_width="258dp"
        android:layout_height="144dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:src="@drawable/logo_main" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:src="@drawable/logo_main_2"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/buttonIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_style1"
        android:text="Ingresar" />

    <TextView
        android:id="@+id/textViewEresNuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="¿Eres Nuevo?"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="italic" />



</LinearLayout>