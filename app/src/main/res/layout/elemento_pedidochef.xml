<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/platoID"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    card_view:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#C5C5C5"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:id="@+id/cardContend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <LinearLayout
                android:id="@+id/contendCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:src="@drawable/food"/>
                    <TextView
                        android:id="@+id/labelNombrePlato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Americano Especial"
                        android:layout_marginStart="20dp"
                        android:textSize="25dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/labelMesa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mesa: #3"
                        android:layout_margin="10dp"
                        android:textSize="25dp"/>
                    <TextView
                        android:id="@+id/labelCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad: 2"
                        android:layout_margin="10dp"
                        android:textSize="25dp"/>
                    <ImageView
                        android:id="@+id/delete"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/delete"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>